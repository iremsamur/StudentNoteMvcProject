@{
    ViewBag.Title = "newStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--<h2>newStudent</h2>-->
<form method="post" class="form-group">
    <div>
        <label>
            Öğrenci Adı
